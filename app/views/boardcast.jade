extends layouts/default

block main
  .row
    .col-md-8
      form.form-horizontal.new-trick(method="post", action='/boardcast', role="form")
        input#_csrf(type='hidden', name='_csrf', value=_csrf)
        .form-group
          label.col-sm-4.control-label(for='title') Boardcast to all followers
          .col-sm-8
            input.form-control#title(type='text', name="title", value="", placeholder='Enter message')

        .form-group
          .col-sm-offset-4.col-sm-8
            button.m-r-md.btn.btn-primary(type='submit')
              i.fa.text
                span.m-l-xs.text Send All

            a.btn.btn-cancel(href='/', title="cancel") Cancel
